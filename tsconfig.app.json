// tsconfig.app.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Senior-Level Strictness */
    "strict": true,
    "noUnusedLocals": true,            /* Error jika ada variabel tak terpakai */
    "noUnusedParameters": true,        /* Error jika ada parameter fungsi tak terpakai */
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases (Sinkron dengan Vite) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}